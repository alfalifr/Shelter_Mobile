<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_bullet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check_circle"
        android:contentDescription="@string/app_name"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/tv_date_forecast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:padding="6dp"
        android:layout_marginStart="30dp"
        tools:text="Senin, 20 Mei 2020"/>


    <TextView
        android:id="@+id/tv_zone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_date_forecast"
        android:elevation="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="38dp"
        android:textColor="@color/red"
        tools:text="Siaga Lapor Telepon"/>

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_zone"
        android:elevation="8dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/font1"
        tools:text="Sidikalang Sumatera Utara"
        android:layout_marginBottom="30dp"/>

</RelativeLayout>